{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
          "--opts",
          "${workspaceFolder}/mocha.opts",
          "${file}"
        ],
        "cwd": "${workspaceRoot}"
    }
  ]
}
