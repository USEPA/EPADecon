{
  "files.exclude": {
    // defaults
    "**/.git": true,
    "**/.DS_Store": true,
    "dist": true,

    "node_modules": true,

    // build folders
    "**/build/**": true,

    "package-lock.json": true
  },
  "json.schemas": [
    {
