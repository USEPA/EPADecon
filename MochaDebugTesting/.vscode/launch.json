{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Mocha Test (ts-node)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--timeout", "100000",
                "test/**/*.spec.ts"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug Mocha Test Current File (ts-node)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--timeout", "100000",
                "${file}"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug Mocha Test (transpiled-code)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--opts", "test/settings.transpiled-code/mocha.opts",
                "--timeout", "100000"
            ],
            "address": "localhost",
            "port": 5858,
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/test/build/test/**/*.js"
            ],
            "preLaunchTask": "build_test_watch_npm"
        }
    ]
}
